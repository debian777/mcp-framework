{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node16"
  },
  "include": [
    "src"
  ]
}