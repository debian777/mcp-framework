{
  "name": "@debian777/mcp-framework",
  "version": "0.4.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build",
    "dev": "node dist/index.js || true",
    "test": "npm run build && find dist -name '*.test.js' -exec node --test {} +",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:console": "grep -Er 'console\\.(log|warn|info|error|debug)' src/ | grep -v '__tests__' | grep -v 'dispatcher.ts' && echo 'ERROR: Direct console usage found in src/ - use framework logger instead' && exit 1 || echo 'âœ“ No direct console usage found (excluding tests and dispatcher)'",
    "docs:api": "typedoc",
    "docs:serve": "mkdocs serve",
    "docs:build": "mkdocs build",
    "docs:deploy": "mkdocs gh-deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/debian777/mcp-framework.git"
  },
  "bugs": {
    "url": "https://github.com/debian777/mcp-framework/issues"
  },
  "homepage": "https://github.com/debian777/mcp-framework#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "ts-jest": "^29.4.4",
    "typedoc": "^0.28.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist/**/*"
  ],
  "overrides": {
    "glob": "^10.0.0",
    "rimraf": "^4.0.0",
    "@npmcli/move-file": "^2.0.0",
    "npmlog": "^7.0.0",
    "are-we-there-yet": "^4.0.0",
    "gauge": "^5.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}